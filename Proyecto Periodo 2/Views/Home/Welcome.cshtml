@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido a Biblioteca Saber y Cultura</h1>
    <p>La aplicación está funcionando correctamente.</p>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <p>Usted está autenticado.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Ir al Dashboard</a>
    }
    else
    {
        <p>Por favor inicie sesión para continuar.</p>
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Iniciar Sesión</a>
    }
</div>
