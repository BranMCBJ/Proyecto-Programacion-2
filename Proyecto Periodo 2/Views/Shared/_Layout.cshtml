@{
    string controlador = ViewContext.RouteData.Values["controller"].ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_Periodo_2</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free@6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Libros/styles.css" />
    @switch (controlador)
    {
        case "Home":
            if(ViewContext.RouteData.Values["action"].ToString() == "Index")
            {
                <link rel="stylesheet" href="~/Home/styles.css" asp-append-version="true" />
            }
            else
            {
                <link rel="stylesheet" href="~/Home/stylesAdministrador.css" asp-append-version="true" />
            }
            break;
        case "Libro":
            <link rel="stylesheet" href="~/Libros/styles.css" asp-append-version="true" />
            break;
        case "Login":
            <link rel="stylesheet" href="~/Login/styles.css" asp-append-version="true" />
            break;
        case "Prestamo":
            <link rel="stylesheet" href="~/Prestamos/styles.css" asp-append-version="true" />
            break;
        case "Cliente":
            <link rel="stylesheet" href="~/Clientes/styles.css" asp-append-version="true" />
            break;
    }
</head>
<body>
    @if (controlador != "Home")
    {
        <header>
            <nav class="navbar navbar-expand-lg bg-white">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="logo.png" alt="Logo" width="auto" height="45">
                    </a>

                    <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item mx-2">
                                <a class="nav-link" aria-current="page" asp-controller="Prestamo" asp-action="Index">
                                    <i class="fa-solid fa-pen-to-square me-1"></i>
                                    PRÉSTAMOS
                                </a>
                            </li>
                            <li class="nav-item dropdown mx-2 nav-libros active">
                                <a class="nav-link dropdown-toggle dropdown-libros" role="button" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <i class="fa-solid fa-book me-1"></i> LIBROS
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="CopiaLibro" asp-action="Index">Copia Libro</a></li>
                                    <li><a class="dropdown-item" asp-controller="EstadoCopiaLibro" asp-action="Index">Estado Copia Libro</a></li>
                                </ul>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link" asp-controller="Cliente" asp-action="Index"><i class="fa-solid fa-user-group me-1"></i> CLIENTES</a>
                            </li>
                        </ul>

                        <div class="dropdown nav-link-custom position-relative">
                            <div class="d-flex align-items-center ms-3 dropdown-toggle" role="button" id="userDropdown"
                                 data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-user" style="padding-right: 35px; width:20px"></i>
                                <div>
                                    <p class="profile-name mb-0">Yaret</p>
                                    <p class="profile-role mb-0">Administrador</p>
                                </div>
                            </div>

                            <!--Parte del perfil -->
                            <div class="dropdown-menu dropdown-menu-end p-0 mt-2 profile-menu-card" aria-labelledby="userDropdown">
                                <div class="profile-header px-3 py-2 d-flex justify-content-between align-items-start">
                                    <div></div>
                                    <span class="close-btn" onclick="document.getElementById('userDropdown').click()">x</span>
                                </div>
                                <div class="profile-info px-3 py-3">
                                    <div class="d-flex align-items-start mb-3">
                                        <img src="fotoperfil.jpg" alt="avatar" class="profile-img me-3">

                                        <a href="#" class="edit-profile-link">
                                            <i class="fa-solid fa-pen-to-square me-1"></i> Editar Perfil
                                        </a>
                                    </div>
                                    <p class="profile-nombre mb-0">Yaret</p>
                                    <p class="profile-email text-muted mb-2">yarethgc@gmail.com</p>
                                    <button class="btn btn-outline-secondary w-100">
                                        <i class="fa-solid fa-right-from-bracket me-1"></i> Cerrar Sesión
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="text-center mt-4 text-muted">
            Biblioteca Saber y Cultura, Todos los derechos reservados.
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
