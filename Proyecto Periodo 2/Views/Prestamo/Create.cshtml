@model Models.ViewModels.PrestamoCreate
<link rel="stylesheet" href="/Prestamos/styles.css">
<link rel="stylesheet" href="/Prestamos/agregarPrestamo.css">
<form asp-controller="Prestamo" asp-action="Create" method="post">
  <div class="container-fluid px-4">
    <div class="row align-items-stretch gy-1">
      <!-- Columna izquierda -->
      <h1 class="title">Nuevo Préstamo</h1>
      <div class="d-flex justify-content-end px-3">
        <a href="libros.html" class="btn mb-4" style="background-color: #8c2445; color: white; min-width: 150px;">Volver</a>
      </div>
      <div class="carousel-container">
        <div id="cardCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
          <div class="carousel-inner">
            @{
              int index = 0;
            }
            @foreach(var item in Model.copiasLibro)
            {
              <div class="carousel-item @(index == 0 ? "active" : "")">
                <div class="card p-4 h-100 shadow-sm">
                  <div class="text-center">
                    <img src="@item.Libro.ImagenUrl" alt="Libro" class="rounded-square img-fluid">
                    <hr class="mx-auto my-2" style="width: 80%; border-top: 1px solid #ccc;">
                    <p style="opacity: 60%;">ISBN: @item.Libro.ISBN</p>
                    <div class="card-body text-center mt-3">
                      <h4 class="card-title fw-bold mb-4">@item.Libro.Titulo</h4>
                      <p class="card-text text-start pt-5">
                        <strong>Fecha de Pub:</strong> @item.Libro.FechaPublicacion
                      </p>
                    </div>
                  </div>
                </div>
              </div>  
              index++;
            }        
          </div>
          <!-- Botones de control dentro del ancho -->
          <button class="carousel-control-prev" type="button" data-bs-target="#cardCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#cardCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
          </button>
        </div>
      </div>
      <!-- Columna Derecha -->
      <div class="col-md-6 right-section">
        <!-- Usuario -->
        <div class="row">
          <div class="card-user">
            @if (!string.IsNullOrEmpty(Model.cliente.URLImagen))
            {
              <img src="@(string.IsNullOrEmpty(Model.cliente.URLImagen) ? "/images/default-user.svg" : $"/Clientes/images/{Model.cliente.URLImagen}")">
            }
            else
            {
              <img src="~/fotoperfil.jpg" alt="Cliente">
            }
            <div>
              <h4><strong>@Model.cliente.Nombre @Model.cliente.Apellido1 @Model.cliente.Apellido2</strong></h4>
              <br>
              <p style="opacity: 75%;">
                Cédula: @Model.cliente.Cedula<br>
                Correo: @Model.cliente.Correo<br>
                Teléfono: @Model.cliente.Telefono
              </p>
              <p>
                <a asp-controller="Prestamo" asp-action="clientes" asp-route-returnTo="Create" style="text-decoration: none; color: #791d35; font-size: 0.9rem;">
                  <i class="bi bi-arrow-left-right me-1"></i>Cambiar Cliente
                </a>
              </p>
            </div>
          </div>
          <a asp-controller="Prestamo" asp-action="libros" asp-route-idCliente="@Model.cliente.IdCliente" class="d-inline-block div-btn text-center border rounded shadow-sm"
            style="width: 200px; padding: 40px !important; height: 200px; cursor: pointer; display: flex; flex-direction: column; justify-content: center; align-items: center; margin-left: -20px; border: 1px solid rgba(0, 0, 0, 0.2) !important;">
            <i class="bi bi-plus" style="font-size: 2.5rem; color: #8A1F40;"></i>
            <div class="mt-2" style="color: #8A1F40; font-weight: 500;">Agregar <br> Libros</div>
          </a>
        </div>
        <div class="row">
          <!-- Fechas -->
          <div class="date-inputs align-items-center mt-4">
            <label class="me-2">Plazo Vigente</label>
            <div class="input d-flex mt-3">
              <input type="text" class="form-control me-2" placeholder="DD/MM/YYYY" disabled>
              <span class="arrow">&rarr;</span>
              <input type="date" name="fechaLimite" class="form-control">
            </div>
          </div>
        </div>
        <div class="row admin-row">
          <div class="admin-label">Efectuado por</div>
          <!-- Admin + Boton -->
          <div class="container-admin mt-3">
            <div class="card-admin">
              @if (!string.IsNullOrEmpty(Model.usuario.UrlImagen))
              {
                <img src="@Model.usuario.UrlImagen" alt="Foto de perfil" class="profile-pic me-3">
              }
              else
              {
                <img src="~/fotoperfil.jpg" alt="Foto de perfil" class="profile-pic me-3">
              }
              <div>
                <h4 class="fw-normal">@Model.usuario.Nombre <br></h4>
                <p style="opacity: 75%;">
                  Usuario: @Model.usuario.NombreUsuario<br>
                  Cédula: @Model.usuario.Cedula<br>
                  Correo: @Model.usuario.Email
                </p>
              </div>
            </div>
            <button type="submit" asp-controller="Prestamo" asp-action="Create" method="post" class="d-inline-block text-center border rounded shadow-sm" 
            style="width: 200px; padding: 40px !important; height: 200px; cursor: pointer; display: flex; flex-direction: column; justify-content: center; align-items: center; margin-left: -20px; border: 1px solid rgba(0, 0, 0, 0.2) !important;" >
              <i class="bi bi-check2" style="font-size: 2.5rem; color: #8A1F40;"></i>
              <div class="mt-2" style="color: #8A1F40; font-weight: 500;">Agregar Préstamo</div>
            </button>          
          </div>
        </div>
      </div>
    </div>
  </div>
</form>