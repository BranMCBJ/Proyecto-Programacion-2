@model Models.ViewModels.PrestamoCreate
<link rel="stylesheet" href="~/Prestamos/create.css" asp-append-version="true" />
<div class="container-fluid px-4">

  <div class="row align-items-stretch gy-1">
    <!-- Columna izquierda -->
     <h1 class="title">Nuevo Préstamo</h1>
     <div class="d-flex justify-content-end px-3">
  <a asp-controller="Prestamo" asp-action="Index" class="btn mb-4" style="background-color: #8c2445; color: white; min-width: 150px;">
    Volver
  </a>
</div>
  <div id="cardCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        @foreach(var copiaLibro in Model.copiasLibro)
        {
          <div class="carousel-item">
            <div class="col-md-4">
              <div class="card p-5 h-100 shadow-sm">
                <div class="d-flex justify-content-end"></div>
                <div class="text-center">
                  <img src="" alt="Libro" class="rounded-square ">
                  <hr class="mx-auto my-2" style="width: 80%; border-top: 1px solid #ccc;">
                  <p style="opacity: 60%;">ISBN: @copiaLibro.Libro.ISBN</p>
                  <div class="card-body text-center mt-3">
                    <h4 class="card-title fw-bold mb-4">@copiaLibro.Libro.Titulo</h4>
                    <p class="card-text text-start">
                      <strong>Autor:</strong> NO EXISTE EXISTE DATO<br>
                      <strong>Idioma:</strong> NO EXISTE EXISTE DATO<br>
                      <strong>Fecha de Pub:</strong> @copiaLibro.Libro.FechaPublicacion
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        }          
      </div>
    </div>
  </div>       
  <button class="carousel-control-prev" type="button" data-bs-target="#cardCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon"></span>
    <span class="visually-hidden">Anterior</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#cardCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>
    <span class="visually-hidden">Siguiente</span>
  </button>
</div>

    <!-- Columna Derecha -->
      <!-- Columna Derecha -->
      <div class="right-section">
        <!-- Usuario -->
        <div class="card-user ">
          <img src="@(string.IsNullOrEmpty(Model.cliente.URLImagen) ? "/images/default-user.svg" : $"/Clientes/images/{Model.cliente.URLImagen}")" alt="Usuario">
          <div>
            <h4><strong>@($"{Model.cliente.Nombre} {Model.cliente.Apellido1} {Model.cliente.Apellido2}")</strong></h4>
            <br>
            <p style="opacity: 75%;">
              Cédula: @Model.cliente.Cedula<br>
              Correo: @Model.cliente.Correo<br>
              Teléfono: @Model.cliente.Telefono
            </p>
            
          </div>
        </div>

        <!-- Fechas -->
        <div class="date-inputs  align-items-center mt-5">
          <label class="me-2">Plazo Vigente</label>
          <div class="input d-flex mt-3">
            <input type="text" class="form-control me-2" placeholder="DD/MM/YYYY" disabled>
          <span class="arrow">&rarr;</span>
          <input type="date" class="form-control"> 
          </div>
          
          
        </div>

        <div class="admin-label mt-5">Efectuado por</div>
        <!-- Admin + Boton -->
         <div class="container-admin h-80 mt-3">
          
            
            <div class="card-admin">
              
              <img src="./resources/img_9279a55e5a_min.jpg" alt="Admin">
              <div>
                <h4 class="fw-normal">Isaac Cordero Arias<br></h4>
                <p style="opacity: 75%;">
                  Usuario: fallingisaac_<br>
                  Cédula: 305790820<br>
                  Rol: Administrador<br>
                  Correo: isaac@syc.cr
                </p>
                
              </div>
            </div>
            <div class="d-inline-block text-center border rounded shadow-sm p-3" style="width: 200px; padding: 40px !important;  height: 200px; cursor: pointer; display: flex; flex-direction: column; justify-content: center; align-items: center;" data-bs-toggle="modal" data-bs-target="#prestamoModal">
              <i class="bi bi-check2" style="font-size: 2.5rem; color: #8A1F40;"></i>
              <div class="mt-2" style="color: #8A1F40; font-weight: 500;">Agregar Préstamo</div>
            </div>


          <div class="modal fade" id="prestamoModal" tabindex="-1" aria-labelledby="prestamoModalLabel" aria-hidden="true" >
            <div class="modal-dialog modal-dialog-centered modal-md" style="max-width: 500px !important;" >
              <div class="modal-content text-center p-5" style="height: 500px !important; padding-top: 80px !important;">
                <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                <h3 class="fw-normal mb-3">Préstamo agregado<br>correctamente</h5>
                <div class="my-3">
                  <div class="position-relative d-inline-block mt-3">
                    <svg width="100" height="100" viewBox="0 0 100 100">
                      <circle cx="50" cy="50" r="45" stroke="#8A1F40" stroke-width="5" fill="none" stroke-dasharray="250" stroke-dashoffset="60"/>
                    </svg>
                    <i class="bi bi-check2 position-absolute top-50 start-50 translate-middle" style="font-size: 3rem; color: #8A1F40;"></i>
                  </div>
                </div>
                <button class="btn text-white mt-5" style="background-color: #8A1F40;" data-bs-dismiss="modal">Aceptar</button>
              </div>
            </div>
          </div>
        </div>
        

      </div>
  </div>
</div>