@model Models.ViewModels.TablaPrestamo
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Préstamos Activos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="~/css/stylesPrestamo.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/tablaPrestamos.css" asp-append-version="true" />
</head>
<body class="m-2">

  <h1 class="text-start m-5" style="color: #871636;">Préstamos Activos</h1>
  <div class="d-flex justify-content-end px-3">
    <a asp-controller="Prestamo" asp-action="clientes" asp-route-returnTo="tablaPrestamos" class="btn m-3" style="background-color: #8c2445; color: white; min-width: 150px;">
      Volver
    </a>
  </div>

  <div class="row">
    <!-- CARD IZQUIERDA -->
    <div class="col-md-4">
      <div class="card p-3 h-100 shadow-sm">
        @if(Model != null)
        {        
          <div class="d-flex justify-content-end">
            <div class="dropdown">
              <button class="btn btn-gear dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-gear-fill"></i>
              </button>
              <ul class="dropdown-menu">
                <li class="dropdown-item">
                  <a asp-controller="Prestamo" asp-action="clientes" asp-route-returnTo="Index" style="text-decoration: none; color: #791d35;">Cambiar Cliente</a>
                </li>
              </ul>
            </div>
          </div>
          <div class="text-center">
            <img src="@(string.IsNullOrEmpty(Model.cliente.URLImagen) ? "~/images/default-user.svg" : $"~/images/clientes/{Model.cliente.URLImagen}")"  alt="Perfil" class="rounded-square">
            <hr class="mx-auto my-2" style="width: 80%; border-top: 1px solid #ccc;">
            <p style="opacity: 60%;">@Model.cliente.Cedula</p>
            <p style="font-size: 25px;">@Model.cliente.Nombre @Model.cliente.Apellido1 @Model.cliente.Apellido2</p>
            <p style="opacity: 60%; font-size: 20px;">
              Correo:  @Model.cliente.Correo<br>
              Teléfono: @Model.cliente.Telefono
            </p>
            <p class="fw-bold text-success" style="font-size: 25px;">@Model.cliente.CantidadPrestamosDisponibles Préstamos Disponibles</p>
          </div>
        }
        else
        {
          <div class="text-center">          
            <a asp-controller="Prestamo" asp-action="clientes" asp-route-returnTo="Index" class="btn btn-cliente w-100 mb-3" style="min-width: 500px; min-height: 700px; text-decoration: none; display: flex; flex-direction: column; justify-content: center; align-items: center;">
              <i class="bi bi-person-fill-add"></i>
              Seleccione un cliente
            </a>
          </div>
        }
      </div>
    </div>

    <!-- TABLA DERECHA -->
    <div class="col-md-8" >
      <div class="tabla-wrapper">
        <table class="table table-bordered m-0">
          <thead>
            <tr>
              <th>FECHA INICIO</th>
              <th>FECHA FIN</th>
              <th>LIBRO</th>
              <th>ESTADO</th>
              <th>ACCIONES</th>
            </tr>
          </thead>
          <tbody>
            @if (Model.prestamos.Any())
            {
              @foreach(var item in Model.prestamos)
              {
                <tr>
                  <td>@item.FechaInicio?.ToString("dd/MM/yyyy")</td>
                  <td>@item.FechaLimite?.ToString("dd/MM/yyyy")</td>
                  <td>Libro prestado</td> <!-- Temporal hasta implementar la relación correcta -->
                  <td>
                    <span class="badge @(item.FechaLimite < DateTime.Now ? "bg-danger" : "bg-success")">
                      @(item.FechaLimite < DateTime.Now ? "Vencido" : (item.estadoPrestamo?.Descripcion ?? "Activo"))
                    </span>
                  </td>
                  <td class="text-center">
                    <a asp-controller="Prestamo" asp-action="verPrestamo" asp-route-id="@item.IdPrestamo" class="btn btn-cliente btn-sm btn-outline-secondary">
                      <i class="bi bi-gear"></i>
                    </a>
                  </td>
                </tr>
              }
            }
            else
            {
              <tr>
                <td colspan="5" class="text-center text-muted">No hay préstamos activos para este cliente.</td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
