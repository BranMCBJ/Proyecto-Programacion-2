@model IEnumerable<Models.ViewModels.UsuarioVM>
@model Models.ViewModels.UsuarioVM
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Vista proyecto</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter&display=swap" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fortawesome/fontawesome-free@6.5.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" asp-append-version="true">
    <link rel="stylesheet" href="~/Usuario/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/Usuario/bootstrap.css" asp-append-version="true">

</head>

<body>



    <!-- Contenedor principal -->
    <div class="container-fluid mt-4 px-4">


        <!-- Encabezado con título y botón -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="titulo-usuario">Usuarios</h1>
            <!-- Botón que activa el modal -->
            <!-- Botón para abrir Agregar Usuario -->
            <label for="toggleAgregarUsuario" class="btn btn-primary d-flex align-items-center">
                <i class="fa-solid fa-user-plus me-2" style="color: #ffffff;"></i>
                Agregar Usuario
            </label>
        </div>

        <!-- Filtros y búsqueda -->
        <div class="row g-2 mb-4">

            <!-- Filtrar por -->
            <div class="col-2">
                <div class="dropdown border border-graydark rounded">
                    <button class="btn text-start w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="d-flex align-items-center text-secondary">
                            <span>Filtrar por</span>
                            <i class="bi bi-chevron-down ms-auto me-0"></i>
                        </div>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"><i class="fa-regular fa-id-card text-primary me-2"></i>Cédula</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fa-regular fa-envelope text-primary me-2"></i>Correo</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-fonts text-primary me-2"></i>Nombre</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fa fa-phone text-primary me-2"></i>Número de Teléfono</a></li>

                        <!-- Rol con submenú -->
                        <li class="dropdown-submenu">
                            <a class="dropdown-item dropdown-toggle" href="#">
                                <i class="fa-solid fa-user text-primary me-2"></i>Rol
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-user-group text-primary me-2"></i>Usuario</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-user text-primary me-2"></i>Administrador</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Ordenar por -->
            <div class="col-2">
                <div class="dropdown border border-graydark rounded">
                    <button class="btn text-start w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="d-flex align-items-center text-secondary">
                            <span>Ordenar por</span>
                            <i class="bi bi-chevron-down ms-auto me-0"></i>
                        </div>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"><i class="fa fa-arrow-up text-primary me-2"></i>Nombre(A-Z)</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fa fa-arrow-down text-primary me-2"></i>Nombre(Z-A)</a></li>
                    </ul>
                </div>
            </div>

            <!-- Buscar -->
            <div class="col-3 ms-auto">
                <div class="input-group border-graydark border rounded d-flex align-items-center">
                    <i class="bi bi-search me-2 ms-1 text-secondary"></i>
                    <input type="text" class="form-control border-0 text-secondary" placeholder="Buscar">
                </div>
            </div>

        </div>



        <div class="container-fluid">
            <div class="row">
                @foreach (var usuario in Model)
                {
                    <div class="col-4">
                        <!--CARD DE USUARIO-->
                        <div class="card card-user mb-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between mb-3">

                                    <!-- Info usuario -->
                                    <div class="d-flex align-items-center">
                                        <img src="@(string.IsNullOrEmpty(@usuario.usuario.UrlImagen) ? "~/Usuario/Imagenes/Foto perfil.png" : $"~/Usuario/Imagenes/{usuario.usuario.UrlImagen}" )" alt="Foto de perfil" class="profile-pic me-3">
                                        <div>
                                            <p class="user-name">@usuario.usuario.NombreUsuario</p>
                                            <p class="user-fullname">@usuario.usuario.Nombre</p>
                                        </div>
                                    </div>

                                    <!--Dropdown editar/eliminar-->
                                    <div class="dropdown">
                                        <button class="btn btn-link p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fa-solid fa-gear text-primary"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <label for="toggleEditarUsuario" class="dropdown-item">
                                                    <i class="fa-solid fa-pen text-primary"></i> Editar
                                                </label>
                                            </li>
                                            <li>
                                                <label for="toggleDeleteModal" class="dropdown-item">
                                                    <i class="fa-solid fa-trash text-primary"></i> Eliminar
                                                </label>
                                            </li>
                                        </ul>
                                    </div>

                                </div>

                                <hr>

                                <!--Datos-->
                                <p><span class="user-info-label">Cédula:</span> @usuario.usuario.Cedula</p>
                                <p><span class="user-info-label">Teléfono:</span> @usuario.usuario.PhoneNumber</p>
                                <p><span class="user-info-label">Correo:</span> @usuario.usuario.Email</p>
                                <p><span class="user-info-label">Rol:</span> @usuario.rol</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>





        <!-- ========== AGREGAR USUARIO ========== -->
        <input type="checkbox" id="toggleAgregarUsuario" hidden>
        <input type="checkbox" id="toggleSuccessAgregar" hidden>

        <div class="custom-modal" id="modalAgregarUsuario">
            <div class="custom-modal-content">
                <form method="post" enctype="multipart/form-data" asp-action="Create">
                    @Html.AntiForgeryToken()
                    <div class="custom-modal-header">
                        Agregar Usuario
                        <button type="reset" class="close-btn" onclick="document.getElementById('toggleAgregarUsuario').checked=false">
                            <i class="fa-solid fa-x"></i>
                        </button>
                    </div>
                    <div class="custom-modal-body">

                        <!-- Botón para subir imagen -->
                        <label for="inputImagen" class="add-icon"><i class="fa-solid fa-plus fa-2xl text-primary"></i></label>
                        <input type="file" id="inputImagen" accept="image/*" hidden>

                        <!-- Fila 1 -->
                        <div class="row-custom">
                            <div class="form-floating-custom">
                                <input asp-for="Usuario.Nombre" type="submit" id="nombre" placeholder=" ">
                                <label for="nombre">Nombre</label>
                            </div>
                            <div class="form-floating-custom">
                                <input type="text" id="apellido1" placeholder=" ">
                                <label for="apellido1">Primer Apellido</label>
                            </div>
                        </div>

                        <!-- Fila 2 -->
                        <div class="row-custom">
                            <div class="form-floating-custom">
                                <input type="text" id="apellido2" placeholder=" ">
                                <label for="apellido2">Segundo Apellido</label>
                            </div>
                            <div class="form-floating-custom">
                                <input type="text" id="nombreUsuario" placeholder=" ">
                                <label for="nombreUsuario">Nombre de Usuario</label>
                            </div>
                        </div>

                        <!-- Fila 3 -->
                        <div class="row-custom">
                            <div class="form-floating-custom">
                                <input type="text" id="cedula" placeholder=" ">
                                <label for="cedula">Cédula</label>
                            </div>
                            <div class="form-floating-custom">
                                <input type="text" id="telefono" placeholder=" ">
                                <label for="telefono">Número de Teléfono</label>
                            </div>
                        </div>

                        <!-- Fila 4 -->
                        <div class="row-custom">
                            <div class="form-floating-custom">
                                <input type="email" id="correo" placeholder=" ">
                                <label for="correo">Correo Electrónico</label>
                            </div>
                            <div class="form-floating-custom">
                                <input type="text" id="password" placeholder=" ">
                                <label for="password">Contraseña</label>
                            </div>
                        </div>

                        <!-- Rol -->
                        <label class="mt-2">Rol:</label>
                        <div class="custom-dropdown">
                            <button type="button" class="dropdown-btn">
                                <span id="rolSeleccionado">Seleccionar Rol</span>
                                <i class="bi bi-chevron-down"></i>
                            </button>
                            <div class="dropdown-content">
                                <a href="#"><i class="fa-solid fa-user-group text-primary me-2"></i>Usuario</a>
                                <a href="#"><i class="fa-solid fa-user text-primary me-2"></i>Administrador</a>
                            </div>
                        </div>
                        <input type="hidden" name="rol" id="rolInput">

                    </div>

                    <div class="custom-modal-footer">
                        <button type="reset" class="btn-cancelar"
                                onclick="document.getElementById('toggleAgregarUsuario').checked=false">
                            Cancelar
                        </button>
                        <label for="toggleSuccessAgregar" class="btn-aceptar"
                               onclick="document.getElementById('toggleAgregarUsuario').checked=false">
                            Aceptar
                        </label>
                    </div>
                </form>
            </div>
        </div>

        <!-- ========== EDITAR USUARIO ========== -->
        <input type="checkbox" id="toggleEditarUsuario" hidden>
        <input type="checkbox" id="toggleSuccessEditar" hidden>

        <div class="custom-modal" id="modalEditarUsuario">
            <div class="custom-modal-content">
                <form>
                    <div class="custom-modal-header">
                        Editar Usuario
                        <button type="reset" class="close-btn"
                                onclick="document.getElementById('toggleEditarUsuario').checked=false">
                            <i class="fa-solid fa-x"></i>
                        </button>
                    </div>
                    <div class="custom-modal-body">
                        <div class="profile-image-container">
                            <img src="Foto perfil.png" alt="Foto del usuario" class="profile-image">
                            <label for="inputImagen" class="edit-camera"><i class="camera-icon fa-solid fa-camera"></i></label>
                            <input type="file" id="inputImagen" accept="image/*" hidden>
                        </div>

                        <!-- Fila 1 -->
                        <div class="row-custom">
                            <div class="form-floating-custom">
                                <input type="text" id="nombre" placeholder=" ">
                                <label for="nombre">Nombre</label>
                            </div>
                            <div class="form-floating-custom">
                                <input type="text" id="apellido1" placeholder=" ">
                                <label for="apellido1">Primer Apellido</label>
                            </div>
                        </div>

                        <!-- Fila 2 -->
                        <div class="row-custom">
                            <div class="form-floating-custom">
                                <input type="text" id="apellido2" placeholder=" ">
                                <label for="apellido2">Segundo Apellido</label>
                            </div>
                            <div class="form-floating-custom">
                                <input type="text" id="nombreUsuario" placeholder=" ">
                                <label for="nombreUsuario">Nombre de Usuario</label>
                            </div>
                        </div>

                        <!-- Fila 3 -->
                        <div class="row-custom">
                            <div class="form-floating-custom">
                                <input type="text" id="cedula" placeholder=" ">
                                <label for="cedula">Cédula</label>
                            </div>
                            <div class="form-floating-custom">
                                <input type="text" id="telefono" placeholder=" ">
                                <label for="telefono">Número de Teléfono</label>
                            </div>
                        </div>

                        <!-- Fila 4 -->
                        <div class="row-custom">
                            <div class="form-floating-custom">
                                <input type="email" id="correo" placeholder=" ">
                                <label for="correo">Correo Electrónico</label>
                            </div>
                            <div class="form-floating-custom">
                                <input type="text" id="password" placeholder=" ">
                                <label for="password">Contraseña</label>
                            </div>
                        </div>

                        <label>Rol:</label>
                        <div class="custom-dropdown">
                            <button type="button" class="dropdown-btn">
                                <span id="rolSeleccionadoEditar">Seleccionar Rol</span>
                                <i class="bi bi-chevron-down"></i>
                            </button>
                            <div class="dropdown-content">
                                <a href="#"><i class="fa-solid fa-user-group text-primary me-2"></i>Usuario</a>
                                <a href="#"><i class="fa-solid fa-user text-primary me-2"></i>Administrador</a>
                            </div>
                        </div>
                        <input type="hidden" name="rol" id="rolInputEditar">
                    </div>

                    <div class="custom-modal-footer">
                        <button type="reset" class="btn-cancelar"
                                onclick="document.getElementById('toggleEditarUsuario').checked=false">
                            Cancelar
                        </button>
                        <label for="toggleSuccessEditar" class="btn-aceptar"
                               onclick="document.getElementById('toggleEditarUsuario').checked=false">
                            Aceptar
                        </label>
                    </div>
                </form>
            </div>
        </div>



        <!-- Modal Éxito Editar -->
        <div class="modal-exito" id="modalSuccessEditar">
            <div class="modal-content">
                <div class="modal-icon">
                    <i class="bi bi-check-circle" style="color: #8C2445; font-size: 70px;"></i>
                </div>
                <h2>¡Éxito!</h2>
                <p>Se editó el usuario correctamente.</p>
                <label for="toggleSuccessEditar" class="modal-button">OK</label>
            </div>
        </div>


        <!-- Checkbox para abrir modal de ELIMINAR -->
        <input type="checkbox" id="toggleDeleteModal" hidden>

        <!-- Checkbox para abrir modal de ÉXITO después de eliminar -->
        <input type="checkbox" id="toggleSuccessDelete" hidden>

        <!-- Modal Eliminar Usuario -->
        <div class="custom-modal" id="modalEliminarUsuario">
            <div class="custom-modal-content">

                <!-- Encabezado -->
                <div class="custom-modal-header-eliminar-alerta">
                    Confirmar eliminación
                    <label for="toggleDeleteModal" class="close-btn">&times;</label>
                </div>

                <!-- Cuerpo -->
                <div class="custom-modal-body text-center">
                    <div class="icono-advertencia">
                        <i class="bi bi-x-circle" style="color: #8C2445; font-size: 70px;"></i>
                    </div>
                    <h2 class="titulo-eliminar">Confirmar eliminación del usuario</h2>
                    <div class="usuario">
                        <img src="Foto perfil.png" alt="Foto del usuario">
                        <span>Jose Pablo Araya</span>
                    </div>
                    <p>¿Está seguro de que desea eliminar a este usuario?</p>
                </div>

                <!-- Footer -->
                <div class="custom-modal-footer justify-content-end">
                    <label for="toggleDeleteModal" class="btn-cancelar">Cancelar</label>
                    <!-- Cierra el modal de eliminar y abre el de éxito -->
                    <label for="toggleSuccessDelete" class="btn-aceptar"
                           onclick="document.getElementById('toggleDeleteModal').checked=false">
                        Aceptar
                    </label>
                </div>
            </div>
        </div>

        <!-- Modal Éxito Eliminar -->
        <div class="modal-exito" id="modalSuccessDelete">
            <div class="modal-content">
                <div class="modal-icon">
                    <i class="bi bi-check-circle" style="color: #8C2445; font-size: 70px;"></i>
                </div>
                <h2>¡Éxito!</h2>
                <p>Se eliminó el usuario correctamente.</p>
                <label for="toggleSuccessDelete" class="modal-button">OK</label>
            </div>
        </div>





        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
